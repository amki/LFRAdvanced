<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="LFRAdvanced.lua"/>
	<Script file="LFRFrameHacks.lua"/>

	<Button name="PVEFrameRaidBrowserButton" inherits="UIPanelButtonTemplate" parent="PVEFrame" text="LOOKING_FOR_RAID" >
		<Size x="100" y="21"/>
		<Anchors>
			<Anchor point="TOPLEFT" x="60" y="-390"/>
		</Anchors>
		<Scripts>
			<OnClick>
				PlaySound("igMainMenuOptionCheckBoxOn");
				ToggleRaidBrowser();
			</OnClick>
		</Scripts>
		<NormalFont style="GameFontNormalSmall"/>
		<HighlightFont style="GameFontHighlightSmall"/>
		<DisabledFont style="GameFontDisableSmall"/>
	</Button>

	<Button name="PVEFrameCopyNameButton" inherits="UIPanelButtonTemplate" parent="LFRBrowseFrame" text="COPY_FILTER" >
		<Size x="65" y="22"/>
		<Anchors>
			<Anchor point="LEFT" relativeTo="LFRBrowseFrameRefreshButton" relativePoint="RIGHT" x="3" y="0"/>
		</Anchors>
		<Scripts>
			<OnClick>
				if not LFRBrowseFrame.selectedName then return end
				local ChatFrameEditBox = ChatEdit_ChooseBoxForSend()
				if (not ChatFrameEditBox:IsShown()) then
					ChatEdit_ActivateChat(ChatFrameEditBox)
				end
				ChatFrameEditBox:Insert(LFRBrowseFrame.selectedName)
				ChatFrameEditBox:HighlightText()
			</OnClick>
		</Scripts>
	</Button>

	<Button name="LFRBrowseFrameColumnHeader8" inherits="LFRBrowseFrameColumnHeaderTemplate" parent="LFRBrowseFrame" text="ilvl">
		<Anchors>
			<Anchor point="LEFT" relativeTo="LFRBrowseFrameColumnHeader7" relativePoint="RIGHT" x="-2" y="0"/>
		</Anchors>
		<Scripts>
			<OnLoad>
				WhoFrameColumn_SetWidth(self, 40);
				self.sortType = "ilevel";
			</OnLoad>
			<OnClick function="MySearchLFGSort"/>
		</Scripts>
	</Button>
</Ui>
