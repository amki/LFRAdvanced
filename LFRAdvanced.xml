<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="LFRAdvanced.lua"/>

	<Frame name="LFRAdvancedOptionsFrame" parent="InterfaceOptionsFramePanelContainer">
		<Frames>
			<CheckButton name="$parentServerSideFiltering" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" x="10" y="-10"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.Text:SetText("Use server side filtering (blizzard default)");
						self.tooltipText = "Use server side filtering instead of client side.";
					</OnLoad>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentShowMemberInfo" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentServerSideFiltering" relativePoint="BOTTOMLEFT"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.Text:SetText("Show each member's class and role in group tooltip");
						self.tooltipText = "Show each member's class and role in group tooltip.";
					</OnLoad>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentAutoRefresh" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentShowMemberInfo" relativePoint="BOTTOMLEFT"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.Text:SetText("Auto refresh search list");
						self.tooltipText = "Automatically refresh search list every 30 sec.";
					</OnLoad>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentShowOldRaids" hidden="true" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentAutoRefresh" relativePoint="BOTTOMLEFT"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.Text:SetText("Show old raids");
						self.tooltipText = "Show old raids in Raid Browser.";
					</OnLoad>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentShowPartyInfo" hidden="true" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentShowOldRaids" relativePoint="BOTTOMLEFT"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.Text:SetText("Show party info");
						self.tooltipText = "Show party info (members, ilvl etc) in tooltip.";
					</OnLoad>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentIgnoreLevelReq" hidden="true" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentShowPartyInfo" relativePoint="BOTTOMLEFT"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.Text:SetText("Ignore level requirements");
						self.tooltipText = "Allows you to list for any raid with character of any level.";
					</OnLoad>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentCreateRaid" hidden="true" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentIgnoreLevelReq" relativePoint="BOTTOMLEFT"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.Text:SetText("Enable Create Raid button");
						self.tooltipText = "Enables Create Raid button in Raid Browser.";
					</OnLoad>
				</Scripts>
			</CheckButton>
		</Frames>
		<Scripts>
			<OnLoad>
				self.name = "LFRAdvanced";
				self.okay = SaveLFRAOptions;
				self.refresh = RefreshLFRAOptions;
				InterfaceOptions_AddCategory(self);
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>
